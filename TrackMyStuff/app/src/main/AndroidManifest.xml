<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aryapps.extmvo.trackmystuff" >

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:icon="@drawable/icon1"
        android:label="@string/app_name" >


        <activity
            android:name=".TrackMyStuffSplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:parentActivityName=".TrackMyStuffSplashActivity"
            android:name=".TrackMyStuffMenuActivity"
            android:label="Menu"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity
            android:parentActivityName=".TrackMyStuffMenuActivity"
            android:name=".TrackMyStuffAddActivity"
            android:label="Add"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:parentActivityName=".TrackMyStuffMenuActivity"
            android:name=".TrackMyStuffSummaryActivity"
            android:label="Summary"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:parentActivityName=".TrackMyStuffMenuActivity"
            android:name=".TrackMyStuffSettingsActivity"
            android:label="Settings"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:parentActivityName=".TrackMyStuffMenuActivity"
            android:name=".TrackMyStuffHelpActivity"
            android:label="Help"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:parentActivityName=".TrackMyStuffSummaryActivity"
            android:name=".TrackMyStuffSummaryDetailActivity"
            android:label="Article Detail"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:parentActivityName=".TrackMyStuffHelpActivity"
            android:name=".TrackMyStuffHelpTutorialActivity"
            android:label="Turorial"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
    </application>


</manifest>
